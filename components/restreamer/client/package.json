{
  "name": "ephyr-restreamer",
  "version": "0.8.0+dev",
  "private": true,
  "config": {
    "get_ip_command": "curl http://api.ipify.org",
    "cypress_host": "ip_address_should_be_here"
  },
  "scripts": {
    "build": "svelte-check && webpack",
    "build:dev": "yarn build",
    "build:prod": "cross-env NODE_ENV=production yarn build",
    "cypress": "cypress open --config watchForFileChanges=false --env host=$($npm_package_config_get_ip_command)",
    "cypress:open": "cypress open --config baseUrl=http://$npm_package_config_cypress_host --env host=$npm_package_config_cypress_host",
    "cypress:host": "cypress open --config baseUrl=http://$npm_package_config_cypress_host --env host=$npm_package_config_cypress_host",
    "cypress:run": "cypress run --browser chrome --headless --env host=$($npm_package_config_get_ip_command)",
    "cypress:run:ci": "cypress run --config baseUrl=http://$npm_package_config_cypress_host --env host=$npm_package_config_cypress_host",
    "dev": "webpack-dev-server",
    "doc": "typedoc",
    "fmt": "prettier --write .",
    "lint": "prettier --check . && svelte-check"
  },
  "dependencies": {
    "@apollo/client": "~3.9",
    "@fortawesome/free-regular-svg-icons": "^6.5",
    "@fortawesome/free-solid-svg-icons": "^6.5",
    "@geoffcox/svelte-splitter": "^1.0.1",
    "clipboard-copy": "^4.0",
    "graphql": "^16.8",
    "graphql-ws": "^5.15",
    "serve-static": "^1.15.0",
    "svelte-apollo": "^0.5",
    "svelte-fa": "^3.0.4",
    "svelte-spa-router": "^3.2",
    "uikit": "^3",
    "uikit-icons": "^0.5"
  },
  "devDependencies": {
    "@tsconfig/svelte": "^4.0",
    "@types/lodash.clonedeep": "^4.5",
    "@types/node": "^20.8",
    "@types/uikit": "^3",
    "@types/webpack": "^5.28",
    "copy-webpack-plugin": "^11.0",
    "cross-env": "^7.0",
    "css-loader": "^6.7",
    "cypress": "^13.6",
    "graphql-tag": "^2.12",
    "html-webpack-plugin": "^5.6",
    "lodash.clonedeep": "^4.5",
    "mini-css-extract-plugin": "^2.8",
    "minify-html-webpack-plugin": "^1.1",
    "prettier": "^3.2",
    "prettier-plugin-svelte": "^3.2",
    "style-loader": "^3.3",
    "stylus": "^0.63",
    "stylus-loader": "^8.1",
    "svelte": "^3.59",
    "svelte-check": "^3.5",
    "svelte-dnd-action": "^0.9",
    "svelte-loader": "^3.1",
    "svelte-preprocess": "^5.0",
    "ts-loader": "^9.5",
    "ts-node": "^10.9",
    "typedoc": "^0.25",
    "typescript": "^5.3",
    "webpack": "^5.90",
    "webpack-cli": "^5.1",
    "webpack-dev-server": "^5.0"
  }
}
