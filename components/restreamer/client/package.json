{
  "name": "ephyr-restreamer",
  "version": "0.5.0",
  "private": true,
  "config": {
    "get_ip_command": "curl http://api.ipify.org",
    "cypress_host": "ip_address_should_be_here"
  },
  "scripts": {
    "build": "svelte-check && webpack",
    "build:dev": "yarn build",
    "build:prod": "cross-env NODE_ENV=production yarn build",
    "cypress": "cypress open --config watchForFileChanges=false --env host=$($npm_package_config_get_ip_command)",
    "cypress:host": "cypress open --config baseUrl=http://$npm_package_config_cypress_host --env host=$npm_package_config_cypress_host",
    "cypress:run": "cypress run --browser chrome --headless --env host=$($npm_package_config_get_ip_command)",
    "cypress:run:ci": "cypress run --config baseUrl=http://$npm_package_config_cypress_host --env host=$npm_package_config_cypress_host",
    "dev": "webpack-dev-server --content-base public",
    "doc": "typedoc",
    "fmt": "prettier --write .",
    "lint": "prettier --check . && svelte-check"
  },
  "dependencies": {
    "@apollo/client": "~3.2.9",
    "clipboard-copy": "^4.0",
    "graphql": "^15.4",
    "subscriptions-transport-ws": "^0.9",
    "svelte-apollo": "^0.4",
    "svelte-spa-router": "^3.1",
    "uikit": "^3.5",
    "uikit-icons": "^0.5"
  },
  "devDependencies": {
    "@tsconfig/svelte": "^1.0",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/node": "^14.14",
    "@types/uikit": "^3.3",
    "@types/webpack": "^4.41",
    "@types/webpack-dev-server": "^3.11",
    "copy-webpack-plugin": "^6.3",
    "cross-env": "^5.2",
    "css-loader": "^2.1",
    "cypress": "^8.3.1",
    "graphql-tag": "^2.11",
    "lodash.clonedeep": "^4.5.0",
    "mini-css-extract-plugin": "^0.6",
    "minify-html-webpack-plugin": "^1.1",
    "prettier": "^2.2",
    "prettier-plugin-svelte": "^2.1",
    "style-loader": "^0.23",
    "stylus": "^0.54",
    "stylus-loader": "^4.3",
    "svelte": "^3.0",
    "svelte-check": "^1.1",
    "svelte-dnd-action": "^0.8.9",
    "svelte-loader": "^2.13",
    "svelte-preprocess": "^4.6",
    "ts-loader": "^8.0",
    "ts-node": "^9.1",
    "typedoc": "^0.20",
    "typescript": "^4.1",
    "webpack": "^4.30",
    "webpack-cli": "^3.3",
    "webpack-dev-server": "^3.3"
  }
}
